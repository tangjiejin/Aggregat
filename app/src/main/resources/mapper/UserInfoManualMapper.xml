<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jaden.app.mapper.UserInfoManualMapper">

    <select id="login" resultType="com.jaden.common.pojo.UserInfo">
      select * from user_info where phone = #{phone} and password = #{password}
    </select>

    <select id="selectByPhone" parameterType="string" resultType="com.jaden.common.pojo.UserInfo">
      select * from user_info where phone = #{phone}
    </select>

</mapper>